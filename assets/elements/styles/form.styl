.openpop 
  &:after 
    display: block
    content: ""
    width: 100%
    height: 1px
    bottom: 0
    left: 0
    background-color: rgba(216, 236, 250, 0.75)
    visibility: hidden
    transform: scaleX(0)
    transform-origin: left bottom
    transition: 0.3s ease-out

  &:hover:after,
  &:focus:after,
  &:active:after 
    visibility: visible
    transform: scaleX(1)
    transform-origin: left bottom

input 
  &[type=text],
  &[type=email] 
    font-family: Josefin Sans
    background-color: transparent
    border: none
    border-bottom: 1px solid #d8ecfa
    border-radius: 0
    outline: none
    height: 50px
    width: 100%
    font-size: 1.5rem
    margin: 20px 0 0 0
    padding: 0
    box-shadow: none
    box-sizing: content-box
    transition: 0.25s ease-out
    position: relative
    color: #d8ecfa
    


